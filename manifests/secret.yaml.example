# IMPORTANT: Bu dosyayi secret.yaml olarak kopyalayip degerleri doldurun
# secret.yaml dosyasini Git'e commit ETMEYiN! (.gitignore ile engellenmistir)
#
# Deger uretimi:
#   DB_PASSWORD:    openssl rand -base64 24
#   JWT_SECRET:     openssl rand -base64 32
#   MinIO keys:     openssl rand -hex 20 (access) / openssl rand -hex 40 (secret)
#
# Production icin Sealed Secrets veya External Secrets Operator kullanmaniz onerilir.
apiVersion: v1
kind: Secret
metadata:
  name: fsdevops-backend-secrets
  labels:
    app.kubernetes.io/part-of: fsdevops-portfolio
    app.kubernetes.io/component: backend
type: Opaque
stringData:
  DB_PASSWORD: "<GENERATE: openssl rand -base64 24>"
  JWT_SECRET: "<GENERATE: openssl rand -base64 32>"
---
apiVersion: v1
kind: Secret
metadata:
  name: fsdevops-backup-credentials
  labels:
    app.kubernetes.io/part-of: fsdevops-portfolio
    app.kubernetes.io/component: database
type: Opaque
stringData:
  accessKeyId: "<GENERATE: openssl rand -hex 20>"
  secretAccessKey: "<GENERATE: openssl rand -hex 40>"
