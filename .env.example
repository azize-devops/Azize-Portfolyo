# =========================
# DevOps Journey Environment Variables
# =========================
# Copy this file to .env and fill in the values
# DO NOT commit .env to git!

# =========================
# Environment
# =========================
ENVIRONMENT=development
NODE_ENV=development

# =========================
# Server Access Configuration
# =========================
# SERVER_IP: Your server's IP address (for remote access)
# Example: 192.0.2.100 or your-server.com
SERVER_IP=YOUR_SERVER_IP_HERE

# =========================
# Database (PostgreSQL)
# =========================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=devops_journey
DB_SSLMODE=disable

# =========================
# Backend Server
# =========================
SERVER_PORT=8080
# CORS: Allow requests from your local machine
# Format: http://SERVER_IP:3000 or multiple origins comma-separated
ALLOW_ORIGINS=http://localhost:3000,http://${SERVER_IP}:3000

# =========================
# JWT Authentication
# =========================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRATION_HOURS=24

# =========================
# SMTP (Email)
# =========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# =========================
# Frontend
# =========================
# API URL: Use server IP for remote access
NEXT_PUBLIC_API_URL=http://${SERVER_IP}:8080
