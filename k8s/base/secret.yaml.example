# IMPORTANT: Copy this file to secret.yaml and fill in the values
# DO NOT commit secret.yaml to git!
#
# To create base64 encoded values:
# echo -n 'your-value' | base64
#
apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
  namespace: devops-journey
type: Opaque
data:
  # Base64 encoded values
  DB_USER: cG9zdGdyZXM=          # postgres
  DB_PASSWORD: <base64-encoded-password>
  DB_HOST: <base64-encoded-host>
  JWT_SECRET: <base64-encoded-jwt-secret>
  SMTP_HOST: <base64-encoded-smtp-host>
  SMTP_PORT: NTg3                 # 587
  SMTP_USER: <base64-encoded-smtp-user>
  SMTP_PASSWORD: <base64-encoded-smtp-password>
  SMTP_FROM: <base64-encoded-smtp-from>
---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secrets
  namespace: devops-journey
type: Opaque
data:
  POSTGRES_USER: cG9zdGdyZXM=    # postgres
  POSTGRES_PASSWORD: <base64-encoded-password>
  POSTGRES_DB: ZGV2b3BzX2pvdXJuZXk=  # devops_journey
